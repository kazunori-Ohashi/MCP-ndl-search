# Core
NODE_ENV=development
TZ=Asia/Tokyo
PORT=8787
LOG_LEVEL=info

# NDL
NDL_BASE_URL=https://ndlsearch.ndl.go.jp/api/sru
NDL_RECORD_SCHEMA=dcndl
NDL_MAX_RECORDS=20
HTTP_TIMEOUT_MS=15000
HTTP_RETRY=3

# MCP Bridge
MCP_API_URL=http://localhost:8787
MCP_API_TOKEN=

# LLM (default OpenAI)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2
OPENAI_TOP_P=1
RECENT_YEAR_THRESHOLD=2018

# Rate limit
RATE_LIMIT_RPM=5
RATE_LIMIT_BACKEND=memory
REDIS_URL=

# Cache/Store
CACHE_TTL_SEC=86400
SQLITE_PATH=./data/app.db
LLM_LOG_RETENTION_DAYS=7
ENABLE_LLM_LOG=true

# Metrics
ENABLE_METRICS=true

# HTTP Bridge
HTTP_PORT=3000
HTTP_HOST=127.0.0.1
ENABLE_CORS=true
ENABLE_SWAGGER=true